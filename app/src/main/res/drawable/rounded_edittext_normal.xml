<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:padding="5dp"
            android:shape="rectangle">
            <solid android:color="@color/editTextColor" />
